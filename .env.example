STRIPE_SANDBOX_PUBLISHABLE_KEY=""          # Stripe test publishable key (pk_test_...)
STRIPE_SANDBOX_WEBHOOK_SECRET=""           # Stripe test webhook secret

# Analytics (Optional - leave empty to disable)
NEXT_PUBLIC_GA_ID=""                    # Google Analytics 4 Measurement ID (G-XXXXXXXXXX)
NEXT_PUBLIC_META_PIXEL_ID=""            # Meta Pixel ID (Facebook/Instagram)
NEXT_PUBLIC_PINTEREST_TAG_ID=""         # Pinterest Tag ID

# Site URL (for SEO/metadata)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"  # Change to your domain in production

# AWS (for SES emails and S3 storage)
AWS_REGION="us-east-1"                     # Your AWS region (e.g., us-east-1, eu-west-1)
AWS_ACCESS_KEY_ID=""                       # Your AWS Access Key ID
AWS_SECRET_ACCESS_KEY=""                   # Your AWS Secret Access Key
AWS_S3_BUCKET_NAME=""                      # S3 bucket for images (e.g., badscandi-assets)
EMAIL_FROM="noreply@yourdomain.com"        # Verified sender email in AWS SES
CONTACT_EMAIL="hello@yourdomain.com"       # Where contact form submissions are sent

# Upstash Redis (for rate limiting - https://upstash.com)
UPSTASH_REDIS_REST_URL=""                  # Upstash Redis REST URL
UPSTASH_REDIS_REST_TOKEN=""                # Upstash Redis REST Token

# EasyPost (for shipping labels - https://easypost.com)
EASYPOST_API_KEY=""                        # EasyPost production API key (EZAK...)
EASYPOST_SANDBOX_API_KEY=""                # EasyPost test API key (for sandbox mode)

# Sandbox Mode Settings
SANDBOX_EMAIL_RECIPIENT=""                 # All emails redirect to this address in sandbox mode
ENABLE_SANDBOX_MODE="false"                # Fallback env var if database not accessible

# Cron Jobs (for email drip automation)
CRON_SHARED_SECRET=""                      # Secret key for cron requests (generate with: openssl rand -hex 32)

# Supabase Direct URL (for Prisma schema changes with connection pooling)
DIRECT_URL=""                              # Direct Postgres connection (port 5432, not pooler)
