generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  name               String?
  emailVerified      Boolean             @default(false)
  image              String?
  isAdmin            Boolean             @default(false)
  marketingConsent   Boolean             @default(false) // For drip emails
  passkeys           Passkey[]
  accounts           Account[]
  sessions           Session[]
  orders             Order[]
  cart               Cart?
  events             Event[]
  emailSubscriptions EmailSubscription[]
  emailLogs          EmailLog[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model Passkey {
  id           String   @id @default(cuid())
  userId       String
  name         String?
  publicKey    String
  credentialID String   @unique
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String?
  createdAt    DateTime @default(now())
  aaguid       String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String    @unique
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Removed VerificationToken - not needed for social + passkey auth
// If you need email/password auth later, Better Auth uses a different structure

model Product {
  id              String   @id @default(cuid())
  slug            String   @unique
  name            String
  description     String
  priceCents      Int
  imageUrl        String
  stock           Int      @default(0)
  featured        Boolean  @default(false)

  // SEO fields
  metaTitle       String?
  metaDescription String?
  altText         String?

  // Product details for fiber art
  category        String?  // "wall-hanging", "tapestry", "macrame", etc.
  tags            String?  // Comma-separated: "boho,hand-dyed,neutral"
  materials       String?  // "cotton yarn", "wool blend", etc.
  colors          String?  // "neutral,beige,cream"
  dimensions      String?  // "24x36 inches"
  room            String?  // "living-room", "bedroom", etc.

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
  @@index([featured])
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  stripeId        String   @unique
  totalCents      Int
  shippingCents   Int      @default(0)
  status          String   @default("pending")
  customerEmail   String?
  shippingAddress Json?    // Stripe shipping address object
  user            User     @relation(fields: [userId], references: [id])
  items           Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([stripeId])
}

model Review {
  id          String   @id @default(cuid())
  customerName String
  email       String?  // Optional - for follow-up and review request emails
  rating      Int      // 1-5 stars
  comment     String
  imageUrls   String[] // Support multiple review photos
  productName String?  // What they purchased (optional)
  featured    Boolean  @default(false) // Show on homepage
  approved    Boolean  @default(false) // Admin approval required
  verified    Boolean  @default(false) // Verified purchase
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([featured])
  @@index([approved])
  @@index([rating])
}

model Cart {
  id        String   @id @default(cuid())
  userId    String   @unique
  items     Json     // [{productId: string, quantity: number}]
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt DateTime @updatedAt
}

// ============================================
// Email Drip System Models
// ============================================

// Tracks all user events for segmentation and drip triggers
model Event {
  id          String   @id @default(cuid())
  userId      String?  // Null for anonymous events
  anonymousId String?  // Cookie-based ID for pre-signup tracking
  eventType   String   // product_view, add_to_cart, checkout_started, order_placed, email_open, email_click
  properties  Json?    // {productId, cartId, utm_source, etc.}
  occurredAt  DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([anonymousId])
  @@index([eventType])
  @@index([occurredAt])
  @@index([userId, eventType, occurredAt])
}

// User email subscription preferences
model EmailSubscription {
  id        String   @id @default(cuid())
  userId    String
  list      String   // marketing, product_updates, order_updates
  status    String   @default("subscribed") // subscribed, unsubscribed
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, list])
  @@index([userId])
  @@index([list, status])
}

// Log of all emails sent for deduplication and tracking
model EmailLog {
  id              String   @id @default(cuid())
  userId          String?
  email           String   // Recipient email (in case user is deleted)
  templateKey     String   // welcome, cart_abandonment_step_1, winback_step_1
  step            Int      @default(1) // For multi-step drips
  relatedEntityId String?  // cartId, orderId, etc.
  sesMessageId    String?  // AWS SES message ID for tracking
  configSet       String?  // SES configuration set used
  status          String   @default("sent") // sent, delivered, opened, clicked, bounced, complained
  metadata        Json?    // Additional tracking data
  sentAt          DateTime @default(now())
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([templateKey])
  @@index([relatedEntityId])
  @@index([sentAt])
  @@index([userId, templateKey, relatedEntityId]) // For deduplication queries
}
